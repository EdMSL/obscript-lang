{
    "name": "tes4scriptsyntax",
    "displayName": "The Elder Scrolls IV: Oblivion Script Syntax",
    "description": "Oblivion (TES4) scripting language support for VS Code",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
	"repository": {
		"type": "git",
		"url": "https://github.com/temetra/tes4_vscode_syntax.git"
	},
	"keywords": [
        "syntax",
        "highlight",
		"tes4",
		"oblivion"
	],
	"author": "Temetra <temetra.xy+git@gmail.com>",
	"license": "MIT",
	"icon": "images/logo.png",
    "contributes": {
        "languages": [{
            "id": "obscript",
            "aliases": ["Oblivion Script", "TES4 Script", "obscript"],
            "extensions": [".obscript"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "obscript",
            "scopeName": "source.obscript",
            "path": "./syntaxes/obscript.tmLanguage.json"
        }]
    }
}